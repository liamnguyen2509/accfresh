                }
            },
            "post": {
                "tags": [ "Orders" ],
                "summary": "Create new order",
                "parameters": [
                    {
                        "name": "Orders",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "buyerEmail": {
                                    "type": "string"
                                },
                                "password": {
                                    "totalAmount": "string"
                                },
                                "items": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": { "type": "string" },
                                            "price": { "type": "string" },
                                            "quantity": { "type": "integer" }
                                        }
                                    } 
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
