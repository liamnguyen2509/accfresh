        "/payment/rate": {
            "post": {
                "tags": [ "Payments" ],
                "summary": "Get rate information from Perfect Money to wallet",
                "parameters": [
                    {
                        "name": "",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": 
                            {
                                "send": {
                                    "type": "string",
                                    "default": "PerfectMoney"
                                },
                                "sendCurrency": {
                                    "type": "string",
                                    "default": "USD"
                                },
                                "receive": {
                                    "type": "string",
                                    "default": "VietComBank"
                                },
                                "receiveCurrency": {
                                    "type": "string",
                                    "default": "VND"
                                },
                                "amount": {
                                    "type": "string"
                                },
                                "amountOf": {
                                    "type": "string",
                                    "default": "send"
                                },
                                "fromAmount": {
                                    "type": "string",
                                    "default": ""
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "FAILED"
                    },
                    "default": {
                        "description": "unexpected error"
                    }
                }
            }
        },
        "/payment/deposit": {
