                                },
                                "send": {
                                    "type": "integer",
                                    "default": 4
                                },
                                "receive": {
                                    "type": "integer",
                                    "default": 1
                                },
                                "fromCurrency": {
                                    "type": "integer",
                                    "default": 50
                                },
                                "toCurrency": {
                                    "type": "integer",
                                    "default": 51
                                },
                                "receiverBank": {
                                    "type": "string"
                                },
                                "phone": {
                                    "type": "string"
                                },
                                "receiveAmount": {
                                    "type": "string"
                                },
                                "senderEmail": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
